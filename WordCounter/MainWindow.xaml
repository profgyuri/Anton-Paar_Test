<Window x:Class="WordCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordCounter"
        x:Name="window"
        mc:Ignorable="d"
        Background="Gray"
        Foreground="White"
        FontSize="18"
        Title="Word Counter" Height="300" Width="450">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{Binding ElementName=window, Path=Background}" />
            <Setter Property="Foreground" Value="{Binding ElementName=window, Path=Foreground}" />
        </Style>
    </Window.Resources>
    
    <Grid
        Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="File path:"/>
        <TextBox
            Grid.Column="1"
            Text="asdasd"
            Margin="10 0"
            Background="{Binding ElementName=window, Path=Background}"
            Foreground="{Binding ElementName=window, Path=Foreground}"/>
        <Button
            Content="Browse"
            Grid.Column="2"/>

        <Button
            Grid.Row="1"
            Content="Start"
            Margin="0 10 0 0"/>
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Content="Cancel"
            Margin="0 10 0 0"/>
        <DataGrid
            Grid.Row="2"
            Grid.Column="1"
            Margin="10 10 10 0"/>
    </Grid>
</Window>
